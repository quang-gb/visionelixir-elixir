{
  "name": "@visionelixir/elixir",
  "version": "0.0.2",
  "description": "VisionElixir Framework",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "lint": "esw 'src/**/*.{js,ts}'",
    "lint:watch": "esw -w 'src/**/*.{js,ts}'",
    "typescript:build": "tsc",
    "typescript:watch": "tsc --watch",
    "build": "npm test && npm run lint && npm run build:typescript",
    "check": "npm run lint && tsc --noEmit"
  },
  "author": "Brent Honeybone",
  "license": "ISC",
  "dependencies": {
    "chalk": "^3.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.1",
    "pg": "^7.18.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^24.9.1",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^2.0.9",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.35",
    "@types/nunjucks": "^3.1.3",
    "@types/pg": "^7.14.3",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-watch": "^6.0.1",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "rootDir": "src",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./**/*.{ts,js}",
      "!./**/test/**/*",
      "!./**/__tests__/**/*",
      "!./**/__mocks__/**/*"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [],
    "transform": {
      "^.+\\.(ts)?$": "ts-jest"
    }
  }
}
